<Alloy>
	<Window class="container" id="add">
		<ButtonBar id="navTop">
			<Button class="nav-back" onClick="goBack">
				<Label class="ico-back"></Label>
				<Label class="ico-back-text">Back</Label>
			</Button>
		</ButtonBar>
		<Label class="label">Add to Piedmont Park</Label>
		<ImageView class="camera" onClick="takePicture"></ImageView>
		<ButtonBar id="navBottom">
			<Button class="nav-submit" onClick="submitThread">
				<Label class="ico-submit-text">Submit Photo to Thread</Label>
				<Label class="ico-submit"></Label>
			</Button>
		</ButtonBar>
	</Window>
</Alloy>